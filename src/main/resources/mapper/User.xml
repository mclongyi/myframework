<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.longyi.mybatis.test.mapper.UserMapper">
  <sql id="base-cloumn">
    id ,name,addr,age,sex,password
  </sql>

  <select id="getUser" parameterType="java.lang.Long" resultType="com.longyi.mybatis.test.pojo.User">
    select <include refid="base-cloumn"/> from user where id=#{id}
  </select>
</mapper>
